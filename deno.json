{
  "name": "@apex-ehr/gh-workflow-sync",
  "version": "1.0.6",
  "exports": "./main.ts",
  "imports": {
    "@inquirer/prompts": "npm:@inquirer/prompts@^5.0.0",
    "cac": "npm:cac@^6.7.14",
    "chalk": "npm:chalk@^5.3.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0"
  },
  "fmt": {
    "semiColons": false,
    "indentWidth": 2,
    "useTabs": false,
    "lineWidth": 110,
    "trailingCommas": "onlyMultiLine",
    "singleQuote": true
  },
  "tasks": {
    "start": "deno run --allow-run=gh,git --allow-read --allow-write --allow-env main.ts",
    "dev": "deno run --allow-run=gh,git --allow-read --allow-write --allow-env --watch main.ts",
    "compile": "deno run --allow-run=deno --allow-read --allow-env scripts/compile-current.ts",
    "compile:linux": "deno compile --allow-run=gh,git --allow-read --allow-write --allow-env --target x86_64-unknown-linux-gnu -o bin/apex-gh-workflow-sync-linux-x64 main.ts",
    "compile:linux-arm64": "deno compile --allow-run=gh,git --allow-read --allow-write --allow-env --target aarch64-unknown-linux-gnu -o bin/apex-gh-workflow-sync-linux-arm64 main.ts",
    "compile:windows": "deno compile --allow-run=gh,git --allow-read --allow-write --allow-env --target x86_64-pc-windows-msvc -o bin/apex-gh-workflow-sync-windows.exe main.ts",
    "compile:macos": "deno compile --allow-run=gh,git --allow-read --allow-write --allow-env --target aarch64-apple-darwin -o bin/apex-gh-workflow-sync-macos main.ts",
    "compile:macos-intel": "deno compile --allow-run=gh,git --allow-read --allow-write --allow-env --target x86_64-apple-darwin -o bin/apex-gh-workflow-sync-macos-intel main.ts",
    "compile:all": "deno task compile:linux && deno task compile:linux-arm64 && deno task compile:windows && deno task compile:macos",
    "test": "deno test --allow-run=gh,git --allow-read --allow-write --allow-env src/__tests__/",
    "test:watch": "deno test --allow-run=gh,git --allow-read --allow-write --allow-env --watch src/__tests__/",
    "test:coverage": "deno test --allow-run=gh,git --allow-read --allow-write --allow-env --coverage=coverage src/__tests__/ && deno coverage coverage"
  }
}
